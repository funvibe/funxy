// Test: Constraint generics
// fun display<t: Printable>(x: t) -> String

trait Printable<t> {
    fun pretty(val: t) -> String
}

instance Printable Int {
    fun pretty(val: Int) -> String {
        "int"
    }
}

instance Printable Bool {
    fun pretty(val: Bool) -> String {
        if val { "true" } else { "false" }
    }
}

// Constrained function - t must implement Printable
fun display<t: Printable>(x: t) -> String {
    pretty(x)
}

// Test with Int - works
print(display(42))

// Test with Bool - works
print(display(true))
print(display(false))
