// Test: MPTC with multiple constraints on single type parameter
// This tests that we can have: Type<a: Trait1, Trait2, b: Trait3>
// Using built-in traits: Numeric, Show, Equal

// Int already implements Numeric, Show, Equal (built-in)

type Pair<a, b> = P(a, b)

// Test: Multiple constraints on 'a' parameter: Numeric AND Show
// 'b' has single constraint: Show
instance Show<Pair<a: Numeric, Show, b: Show>> {
    fun show(p: Pair<a, b>) -> String {
        match p {
            P(x, y) -> {
                // Use Numeric constraint on 'a'
                doubled = x + x
                // Use Show constraint on 'a'
                xStr = show(doubled)
                // Use Show constraint on 'b'
                yStr = show(y)
                "Pair(" ++ xStr ++ ", " ++ yStr ++ ")"
            }
        }
    }
}

