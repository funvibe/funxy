// =============================================================================
// Tests for show and read built-in functions
// =============================================================================

print("=== show ===")

// Primitives
print(show(42))
print(show(-100))
print(show(3.14))
print(show(true))
print(show(false))
print(show('A'))
print(show('\n'))

// String (no extra quotes)
print(show("hello"))

// List
print(show([1, 2, 3]))
print(show([]))

// ADT
print(show(Some(42)))
print(show(None))
print(show(Ok("yes")))
print(show(Fail(404)))

// Tuple
print(show((1, 2)))
print(show((1, "a", true)))

// BigInt / Rational
print(show(123n))
print(show(1000000000000000000n))

print("=== read Int ===")

// Valid
print(read("42", Int))
print(read("-100", Int))
print(read("0", Int))
print(read("  42  ", Int))  // trim whitespace

// Invalid - strict parsing
print(read("3.14", Int))    // None (not partial)
print(read("42abc", Int))   // None
print(read("abc", Int))     // None
print(read("", Int))        // None

print("=== read Float ===")

print(read("3.14", Float))
print(read("42", Float))
print(read("-0.5", Float))
print(read("abc", Float))   // None

print("=== read Bool ===")

print(read("true", Bool))
print(read("false", Bool))
print(read("  true  ", Bool))  // trim
print(read("yes", Bool))       // None
print(read("1", Bool))         // None
print(read("True", Bool))      // None (case sensitive)

print("=== read Char ===")

print(read("A", Char))
print(read("Ñ", Char))     // Unicode
print(read("AB", Char))    // None (>1 char)
print(read("", Char))      // None (empty)

print("=== read BigInt ===")

print(read("123", BigInt))
print(read("12345678901234567890", BigInt))
print(read("-999", BigInt))
print(read("abc", BigInt))  // None

print("=== read Rational ===")

print(read("3/4", Rational))
print(read("1/3", Rational))
print(read("0.5", Rational))
print(read("abc", Rational))  // None

print("=== read String ===")

print(read("hello", String))
print(read("", String))
print(read("  spaces  ", String))

print("=== builtins_show_read tests passed! ===")

